<mvc:View
	controllerName="DecisionsOne.src.pages.security.Login"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	height="100%">
	<Page class="loginBG" backgroundDesign="Transparent"  showHeader="false" id="DecisionsOneLoginPage" >
		<content>

			<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">

				<items>
					<Image src="webapp/img/Logo.png" ></Image>
					<Input 
						id="b1Company" 
						width="16rem" 
						showValueHelp="true" 
						showSuggestion="true"							
						valueHelpRequest="findLastSessions"			
						placeholder="{i18n>Commom.Company}" 
						value="{/Company}"
						suggestionItems="{lastSessions>/}">
						<suggestionItems>
							<core:Item text="{lastSessions>Company}" />
						</suggestionItems>
					</Input>
					<Input width="16rem" id="userName" placeholder="{i18n>Commom.User}" value="{/UserName}"></Input>
					<Input width="16rem" id="userPass" placeholder="{i18n>Commom.Password}" type="Password" value="{/Password}" ></Input>
					<Button width="16rem" id="loginButton"  text="{i18n>Commom.Login}" type="Emphasized" press="onLogin"></Button>

				</items>
			</VBox>

		</content>
		<footer>
			<Bar>
				<contentLeft>
					<Link class="sapUiTinyMarginBegin" href="{i18n>App.CompanyLink}"  target="_blank"   text="Invent Software Ltda"></Link>
				</contentLeft>
				<contentRight>
					<Text class="sapUiTinyMarginEnd" text="{i18n>App.Name}"></Text>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>
