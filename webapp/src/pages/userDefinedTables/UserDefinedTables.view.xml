<mvc:View
	controllerName="DecisionsOne.src.pages.userDefinedTables.UserDefinedTables"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"	
	height="100%">
	<Page 
		showNavButton="true" 
		title="{i18n>Commom.UserDefinedTables}" 
		navButtonPress="onNavBack">
		 <headerContent>
            <Button
					icon="sap-icon://add"
					press="onCreate" />
            <Button
					icon="sap-icon://refresh"
					text="{i18n>Commom.Refesh}"
					press="onLoadData" />
        </headerContent>
		<content>
		 <Panel id="panelForGridList">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>Commom.Search}"/>
                        <ToolbarSpacer />
                        <SearchField placeholder="{i18n>UserDefinedFields.FindTable}" search="filterData" width="67%" />
                    </Toolbar>
                </headerToolbar>
                <content>		
  					<List
						mode="sap.m.ListMode.SingleSelect"
						id="idList"
						items="{
							path: '/'						
						}">
                     
                        <StandardListItem
						press="onDetail"
						type="Navigation"
						title="{TableName}"
						description="{TableDescription}"
						info="{TableType}"
						icon="{ProductPicUrl}"
						iconDensityAware="false"
						iconInset="false" />
                    </List>
				</content>
			</Panel>
		</content>	
	</Page>
</mvc:View>
